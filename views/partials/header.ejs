<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700&display=swap" rel="stylesheet">


</head>
<body class="main-background">
    <nav class="navbar">
        <div class="logo"><a href="/"><img src="/images/FitGear-Hub_transparent-.png" alt="fitgear hub logo" class="logo-img"></a></div>

        
        <div class="searchbar">
            <form class="d-flex" role="search" action="/fitnessItems" method="GET">
                <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
              </form>
        </div>


        <div class="navtabs">
            <ul class="nav nav-tabs small p-1">
                <li class="nav-item">
                  <a class="nav-link" href="/fitnessItems">Browse</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/fitnessItems/new">Sell</a>
                </li>

                <%if(!user){%>
                <li class="nav-item">
                  <a class="nav-link" href="/user/new">Sign Up</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/user/login">Login</a>
                </li>
                <% }else{ %>
                  <li class="nav-item">
                    <a class="nav-link" href="/user/profile">My account</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/user/logout">Logout</a>
                  </li>
                <% } %>
              </ul>
        </div>
    </nav>

    <div class="main-content-browse">
    <% if(errorMessages.length > 0) {%>
      <% errorMessages.forEach(message=>{%>
          <div class='error-f alert alert-danger alert-dismissable fade show' role="alert">
              <%=message%>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <%});%>
              <%}%>
  
                  <% if(successMessages.length > 0) {%>
  
                      <% successMessages.forEach(message=>{%>
                          <div class='success alert alert-success alert-dismissable fade show' role="alert">
                              <%=message%>
                              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                          </div>
                          <%});%>
                              <%}%>

                              <% if(warningMessages.length > 0) {%>
  
                                <% warningMessages.forEach(message=>{%>
                                    <div class='warning alert alert-warning alert-dismissable fade show' role="alert">
                                        <%=message%>
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                    <%});%>
                                        <%}%>

